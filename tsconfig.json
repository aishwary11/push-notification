{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": false
  },
  "include": ["src/**/*", "eslint.config.js"],
  "exclude": ["node_modules", "dist"]
}
